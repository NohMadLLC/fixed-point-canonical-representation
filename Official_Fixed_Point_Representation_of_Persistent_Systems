\appendix

\section{Proofs for Section 2 (Operator Theory)}
\label{app:operator_proofs}

\begin{proof}[Proof of Proposition~\ref{prop:fix-invariance}]
Let $x$ be such that $F_\alpha(x)=x$.
Then
$(1-\alpha)x + \alpha F(x) = x$, implying $\alpha(F(x)-x)=0$.
Since $\alpha>0$, $F(x)=x$. Conversely, if $F(x)=x$ then
$F_\alpha(x)=x$. Thus $\mathrm{Fix}(F_\alpha)=\mathrm{Fix}(F)$.
\end{proof}

\begin{proof}[Proof of Theorem~\ref{thm:qalpha}]
For any $x,y$,
$\|F_\alpha x - F_\alpha y\| \le (1-\alpha)\|x-y\| + \alpha\|F(x)-F(y)\|
\le ((1-\alpha) + \alpha\eta)\|x-y\|$.
Set $q_\alpha = (1-\alpha)+\alpha\eta$ (see also \cite[Prop. 4.33]{BauschkeCombettes2017}).
\end{proof}

\begin{proof}[Proof of Proposition~\ref{prop:persistence_consistency}]
Let $P_n = \|z_n - z_{n+1}\|$.
Under the model
$\log P_n = a - \gamma_\alpha n + \varepsilon_n$ with $\varepsilon_n$
zero-mean and finite variance, OLS slope converges in probability to
$-\gamma_\alpha$.
Since $\lambda_\alpha=e^{-\gamma_\alpha}$ and
$\eta$ is recovered by a continuous mapping, $\widehat{\eta}\xrightarrow{p}\eta$.
\end{proof}

% ---------------------------------------------------------------------

\section{Proofs for Section 3 (Necessity Theorem)}
\label{app:necessity_proofs}

\begin{proof}[Proof of Theorem~\ref{thm:localmetric}]
By the Hartman--Grobman theorem \cite{Hartman1960,Grobman1959} and Palmer's refinement \cite{Palmer1984} for hyperbolic fixed
points, there exists a neighborhood $U$ of $x^{*}$ and a $C^{1}$ conjugacy
$\Phi$ such that $\Phi\circ T \circ \Phi^{-1}$ is linear on $U$:
$\Phi(T(x)) = A \Phi(x)$ with $A = DT(x^{*})$.
Since $\rho(A)<1$, equip $U$ with the norm $\|v\|_{A}:=\sum_{k\ge 0}\|A^{k}v\|$.
Then $\|A v\|_{A} \le \eta \|v\|_{A}$ for some $\eta\in(\rho(A),1)$.
Pull this metric back via $\Phi$ to obtain $g$.
\end{proof}

\begin{proof}[Proof of Lemma~\ref{lem:lyap}]
Define $V(x):=\sum_{n\ge 0}\eta^{-2n}\,d_g(T^n(x),x^*)^2$
Convergence follows from $\eta<1$.
Then $V(T(x)) \le \eta^2 V(x)$ and $V(x)=0$ iff $x=x^{*}$.
Define $d_{V}(x,y):=|V(x)-V(y)|^{1/2}$.
Then $d_{V}(T(x),T(y))\le \eta d_{V}(x,y)$.
\end{proof}

\begin{proof}[Proof of Lemma~\ref{lem:convex}]
Let $B = \{T^{n}(x) : x\in X, n\ge 0\}$ in $(X,d_{V})$. Let $\mathcal{C} = \overline{B}$.
For any $x,y\in \mathcal{C}$ and $\theta\in[0,1]$, consider the geodesic segment in the
$V$-sublevel structure.
Since $V$ is convex along orbits and sublevel sets
$\{V\le c\}$ are convex, $\mathcal{C}$ (union of nested convex sublevel sets) is convex.
\end{proof}

\begin{proof}[Proof of Theorem~\ref{thm:necessity}]
Embed $(X,d_{V})$ isometrically into a Hilbert space $(\mathcal{H},\|\cdot\|)$.
Let $\mathcal{C} = \overline{B}$ where $B$ is the forward basin;
by Lemma~\ref{lem:convex}, $\mathcal{C}$ is convex and closed.
Let $P_{\mathcal{C}}$ be the orthogonal projection onto $\mathcal{C}$.
Define $E: \mathcal{H}\to\mathcal{H}$ by $E(x):=T(x)$ if $x\in\mathcal{C}$,
and extend by contraction continuity to $\mathcal{H}$.
Then
$F = P_{\mathcal{C}}\circ E$, with $E$ strictly contractive and $P_{\mathcal{C}}$
firmly nonexpansive.
Uniqueness follows because $\mathcal{C}$ and $E$ are
determined from the orbit geometry of $T$ and projection is canonical;
see also proximal/projection geometry \cite{Moreau1965,EcksteinBertsekas1992}.
\end{proof}

% ---------------------------------------------------------------------

\section{Algorithmic Falsification Protocols (Full Formal Statements)}
\label{app:falsification}

\subsection{Protocol A (Exponential Decay Test)}
Reject admissibility if $\log P_n$ fails linear model fit at significance
$\alpha_{\mathrm{test}}$ under whitened residual diagnostics.

\subsection{Protocol B (Contraction Ratio Stability)}
Reject if $\widehat{\lambda}_{\alpha}$ varies beyond tolerance $\delta$ under
changes in $(m,\alpha)$.

\subsection{Protocol C (Substrate Invariance)}
Reject if $\widehat{\eta}$ differs across encodings beyond floating-point error.

\subsection{Protocol D (Dual-Representation Consistency)}
Reject if contraction constants differ under linear vs.\ nonlinear basis lifts.

% ---------------------------------------------------------------------

